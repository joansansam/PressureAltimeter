<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/service_response_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Pressure from service: "
        app:layout_constraintBaseline_toBaselineOf="@+id/call_service_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/calibration_pressure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="\?"
        app:layout_constraintBaseline_toBaselineOf="@+id/service_response_title"
        app:layout_constraintStart_toEndOf="@+id/service_response_title" />

    <ToggleButton
        android:id="@+id/baro_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="ToggleButton"
        android:textAllCaps="false"
        android:textOff="Start"
        android:textOn="Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baro_title_tv" />

    <TextView
        android:id="@+id/baro_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Smartphone Barometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensor_progress_bar" />

    <Button
        android:id="@+id/call_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Calibrate"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/service_progress_bar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pressure_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Pressure: "
        app:layout_constraintBaseline_toBaselineOf="@+id/pressure_baro_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pressure_baro_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="\?"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/pressure_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/baro_btn" />

    <TextView
        android:id="@+id/altitude_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Altitude: "
        app:layout_constraintBaseline_toBaselineOf="@+id/altitude_baro_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/altitude_baro_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="\?"
        android:textSize="96sp"
        app:layout_constraintStart_toEndOf="@+id/altitude_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/pressure_baro_tv" />

    <ProgressBar
        android:id="@+id/sensor_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/service_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>